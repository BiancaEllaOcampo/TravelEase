rules_version = '2';

// Firebase Storage Security Rules for TravelEase
service firebase.storage {
  match /b/{bucket}/o {
    
    // User profile pictures
    match /user_profiles/{userId}/{fileName} {
      // Allow users to read any profile picture
      allow read: if request.auth != null;
      
      // Allow users to upload/update/delete only their own profile pictures
      allow write: if request.auth != null 
                   && request.auth.uid == userId
                   && request.resource.size < 5 * 1024 * 1024  // Max 5MB
                   && request.resource.contentType.matches('image/.*');  // Only images
    }
    
    // Travel document uploads
    match /user_documents/{userId}/{country}/{documentType}/{fileName} {
      // Allow users to read only their own documents
      allow read: if request.auth != null 
                  && request.auth.uid == userId;
      
      // Allow users to upload/update/delete only their own documents
      allow write: if request.auth != null 
                   && request.auth.uid == userId
                   && request.resource.size < 10 * 1024 * 1024  // Max 10MB
                   && request.resource.contentType.matches('image/.*');  // Only images
    }
    
    // Admin access (for future admin features)
    match /admin_uploads/{allPaths=**} {
      // Only allow authenticated users with admin claim
      allow read, write: if request.auth != null 
                         && request.auth.token.admin == true;
    }
  }
}
